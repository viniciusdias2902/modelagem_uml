@startuml
|Administrador|
start
:Acessar gestão de pontos;

|Sistema|
:Exibir formulário;

|Administrador|
repeat
  :Preencher dados do ponto;
  
  |Sistema|
  :Validar dados;
  
  if (Dados válidos?) then (sim)
    :Criar novo ponto de embarque;
    :Adicionar ponto à rota;
    :Calcular nova ordem dos pontos;
    :Reordenar pontos da rota;
    :Atualizar sequência de passagem;
    :Confirmar cadastro realizado;
    
    |Administrador|
    :Visualizar confirmação;
    stop
  else (não)
    :Informar dados inválidos;
    
    |Administrador|
    :Visualizar mensagem de erro;
  endif
  
repeat while (Deseja tentar novamente?) is (sim)
->não;

|Administrador|
stop
@enduml
