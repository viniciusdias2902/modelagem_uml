@startuml
|Aluno|
start
:Acessar página de cadastro;

|Sistema|
:Exibir formulário;

|Aluno|
repeat
  :Preencher dados pessoais;
  
  |Sistema|
  :Validar dados;
  
  if (Dados válidos?) then (sim)
    :Verificar se email existe;
    
    if (Email já existe?) then (sim)
      :Informar email duplicado;
      
      |Aluno|
      :Visualizar mensagem de erro;
    else (não)
      |Sistema|
      :Registrar novo aluno;
      :Confirmar cadastro realizado;
      
      |Aluno|
      :Visualizar confirmação;
      stop
    endif
  else (não)
    :Informar dados inválidos;
    
    |Aluno|
    :Visualizar mensagem de erro;
  endif
  
repeat while (Deseja tentar novamente?) is (sim)
->não;

|Aluno|
stop
@enduml
