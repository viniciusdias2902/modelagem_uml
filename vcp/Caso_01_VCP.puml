@startuml
left to right direction

' ==========================================
' CONTRATO
' ==========================================
interface Usuario <<interface>> {
    +getNome(): String
    +getEmail(): String
    +getSenha(): String
}

' ==========================================
' ENTIDADES
' ==========================================
class Aluno <<entity>> {
    -nome: String
    -email: String
    -senha: String
    -pontoEmbarque: PontoEmbarque
    +getNome(): String
    +getEmail(): String
    +getSenha(): String
    +getPontoEmbarque(): PontoEmbarque
}

class Motorista <<entity>> {
    -nome: String
    -email: String
    -senha: String
    -cnh: String
    +getNome(): String
    +getEmail(): String
    +getSenha(): String
}

class Secretaria <<entity>> {
    -nome: String
    -email: String
    -senha: String
    +getNome(): String
    +getEmail(): String
    +getSenha(): String
}

Usuario <|.. Aluno
Usuario <|.. Motorista
Usuario <|.. Secretaria

' ==========================================
' DTO
' ==========================================
class DadosUsuario <<dto>> {
    nome: String
    email: String
    senha: String
    cnh: String [0..1]
    pontoEmbarque: PontoEmbarque [0..1]
}

' ==========================================
' FACTORY
' ==========================================
class UsuarioFactory {
    +criarUsuario(dados: DadosUsuario): Usuario
}

UsuarioFactory ..> Usuario : <<creates>>

' ==========================================
' ECB
' ==========================================
class TelaCadastro <<boundary>> {
    +obterDados(): DadosUsuario
    +exibirMensagemSucesso()
    +exibirMensagemErro(msg: String)
}

class CadastroController <<controller>> {
    +cadastrarUsuario(dados: DadosUsuario)
    -validarDados(dados: DadosUsuario): boolean
}

TelaCadastro --> CadastroController
CadastroController --> UsuarioFactory

@enduml
