@startuml
left to right direction

class TelaVisualizacaoRota <<boundary>> {
    +exibirRota()
    +exibirListaPontos()
    +destacarPontoAluno()
}

class VisualizacaoRotaController <<controller>> {
    +carregarRota()
    +carregarPontos()
    +identificarPontoAluno(aluno)
}

class Rota <<entity>> {
    -pontos: List<PontoEmbarque>
    -pontoAtual: PontoEmbarque
    +getPontos()
    +getPontoAtual()
}

class PontoEmbarque <<entity>> {
    -nome: String
    -referencia: String
    -ordem: Integer
    +getNome()
    +getReferencia()
    +getOrdem()
}

class Aluno <<entity>> {
    -nome: String
    -email: String
    -pontoEmbarque: PontoEmbarque
    +getNome()
    +getPontoEmbarque()
}

TelaVisualizacaoRota --> VisualizacaoRotaController
VisualizacaoRotaController --> Rota
VisualizacaoRotaController --> Aluno
Rota --> PontoEmbarque
Aluno --> PontoEmbarque

@enduml

